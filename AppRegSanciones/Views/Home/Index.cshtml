
<div class="Tittle" style="margin-top:1rem">
    <div class="row">
        <div class="col-lg-10">
            <h1 style="        margin-bottom: 0;
        font-weight: 600;
        color: #072327 !important" class="text-themecolor">
                Lista de infracciones
            </h1>
            <p>Historial de incidencias registradas por el superior a cargo</p>
        </div>
        <div class="col-lg-2 ">
            <!---data-toggle="modal" data-target=".bd-incidence-modal-lg" type="button"-->
            <button style="float:right;margin:auto" class="btn btn-dark" id="btnIncidencia">Crear Infracción</button>
        </div>
    </div>



</div>
<br />
<div class="row manage">
    <div class="col-lg-8">
        <div class="row" style="margin-bottom:1rem">
            <div class="col-lg-4">
                <label style="padding-top: 0;  padding-bottom: calc(0.5rem + 1px);" for="recipient-name" class="col-form-label">N° Codigo Papeleta:</label>
                <input type="text" class="form-control" id="txtcodigoPapeleta" value="">
            </div>
        </div>


        <div class="row">
            <div class="col-lg-6">
                <div class="form-group mg-b-0">
                    <label style="font-weight:500" id="lbl_fecha_inicio_buscador">Fecha Inicio: </label> <span class="tx-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="icon ion-calendar tx-16 lh-0 op-6"></i>
                            </div>
                        </div>
                        <input type="text" name="txt_fecha_inicio" id="txt_fecha_inicio" class="form-control fc-datepicker" placeholder="DD/MM/YYYY">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group mg-b-0">
                    <label style="font-weight:500" id="lbl_fecha_inicio_buscador">Fecha Final: </label> <span class="tx-danger">*</span>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="icon ion-calendar tx-16 lh-0 op-6"></i>
                            </div>
                        </div>
                        <input type="text" name="txt_fecha_final" id="txt_fecha_final" class="form-control fc-datepicker" placeholder="DD/MM/YYYY">
                    </div>
                </div>
            </div>


        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group mg-b-0">
                    <label style="font-weight:500" id="lbl_fecha_inicio_buscador" data-i18n="start-date">Estado: </label>
                    <div class="input-group">
                        <select class="form-control form-control-line" id="idestadoPapeleta">
                            <option value="0">-TODOS-</option>
                            <option value="1">Procesado</option>
                            <option value="2">Aprobado</option>
                            <option value="3">Ejecutado</option>
                            <option value="5">Anulado</option>
                        </select>
                    </div>
                </div>


            </div>
            <div class="col-lg-8">
                <div class="form-group">
                    <label style="font-weight:500" class="">Sancionador : </label>
                    <div class="" style="display:flex">
                        <input disabled="disabled" id="txtSancionador" type="text" class="form-control form-control-line">

                        <div style="margin: auto;padding: 0px 0.5rem 0 0.5rem;" class="" data-toggle="modal" data-target=".bd-example-modal-lg">
                            <i style="cursor: pointer; font-size: 25px" class="fa fa-search"></i>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="align-self-lg-auto">
                    <a style=" padding: 7px 25px;color:white" id="btnbuscar" class="btn waves-effect waves-light btn btn-info pull-right hidden-sm-down">Buscar</a>
                </div>
            </div>

        </div>

    </div>
    <div class="col-lg-4">

        <div class="card">
            <div class="card-body">
                <h2 style="padding-bottom:1rem;        FONT-WEIGHT: 400;
        TEXT-ALIGN: CENTER;
        color: #545454
">
                    Puntaje Actual : <span id="idpuntaje" style="FONT-WEIGHT: 800;">184</span>
                </h2>
                <div class="d-flex m-b-30 no-block">
                    <h5 class="card-title m-b-0 align-self-center">% Infracciones</h5>

                </div>
                <div id="visitor" style="height:260px; width:100%;"></div>
                <ul class="list-inline m-t-30 text-center font-12">
                    <li><i class="fa fa-circle text-purple"></i> A/S</li>
                    <li><i class="fa fa-circle text-success"></i> A/R</li>
                    <li><i class="fa fa-circle text-info"></i> BAJA</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="col-lg-8">


    </div>

</div>

<div class="row">
    <!-- Column -->
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive m-t-20 no-wrap">
                    <table class="table vm no-th-brd pro-of-month" id="table_lista_papeletas" style="width:100%">
                        <thead>
                            <tr style="text-align:center;">
                                <th>N° Papeleta</th>
                                <th>Des.Infracción</th>
                                <th>Fecha Registro</th>
                                <th>Sancionador</th>
                                <th>Estado</th>
                                <th>Opciónes</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    @Html.Partial("../Modals/ModalSearchPerson")

